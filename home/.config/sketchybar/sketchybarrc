#!/bin/bash

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar \
  position=top \
  height=24 \
  blur_radius=0 \
  color=0x00000000 \
  padding_left=8 \
  padding_right=8 \
  border_width=0 \
  corner_radius=0 \
  y_offset=8

##### Changing Defaults #####
default=(
  background.height=24
  icon.y_offset=1
  label.y_offset=1
  background.color=0x88222222
  background.border_color=0xff333333
  background.border_width=1
  background.corner_radius=3
  padding_left=1
  padding_right=1
  icon.font="FiraCode Nerd Font Mono:Retina:12.0"
  icon.color=0xffffffff
  icon.padding_left=5
  icon.padding_right=5
  label.font="FiraCode Nerd Font Mono:Retina:12.0"
  label.color=0xffffffff
  label.padding_left=5
  label.padding_right=5
)
sketchybar --default "${default[@]}"

##### Adding Mission Control Space Indicators #####
SPACE_ICONS=("1 üë®‚Äçüíª" "2 üåç" "3 üõ†Ô∏è" "4 üìù" "5 üéµ" "6 üí¨" "7 üì∫" "8 üåà" "9 üìî" "‚öôÔ∏è")
for i in "${!SPACE_ICONS[@]}"
do
  sid="$(($i+1))"
  space=(
    space="$sid"
    icon="${SPACE_ICONS[i]}"
    label.drawing=off
    padding_left=1
    padding_right=1
    script="$PLUGIN_DIR/space.sh"
    click_script="yabai -m space --focus $sid"
  )
  sketchybar --add space space."$sid" left \
             --set space."$sid" "${space[@]}" \
             --subscribe space."$sid" space_change window_focus display_change window_created window_destroyed active_space_change
done

##### Adding Left Items #####
#sketchybar --add item front_app left \
#           --set front_app \
#             icon.drawing=off \
#             update_freq=1 \
#             script="$PLUGIN_DIR/front_app.sh" \
#             background.color=0x00000000 \
#             background.border_width=0 \
#           --subscribe front_app \
#             front_app_switched \
#             window_focus \
#             window_title_changed

##### Adding Right Items #####
# Add items from right to left (clock rightmost)
sketchybar --add item clock right \
           --set clock \
             update_freq=1 \
             icon.drawing=off \
             script="$PLUGIN_DIR/clock.sh" \
           --subscribe clock system_woke \
           \
           --add item volume right \
           --set volume \
             script="$PLUGIN_DIR/volume.sh" \
           --subscribe volume \
             volume_change \
           \
           --add item battery right \
           --set battery \
             update_freq=120 \
             script="$PLUGIN_DIR/battery.sh" \
           --subscribe battery \
             system_woke \
             power_source_change

##### Force all scripts to run the first time #####
sketchybar --update
