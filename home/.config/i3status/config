general {
        output_format = "i3bar"
        colors = true
        interval = 1
}

order += "battery 0"
order += "load"
order += "cpu_usage"
#order += "cpu_temperature 0"
order += "disk /"
#order += "disk /tank"
#order += "disk /fast"
# Crashes for some reason... maybe pipewire's fault?
order += "volume master"
#order += "volume mic"  # Doesn't work...

# Network
order += "wireless _first_"
order += "ethernet _first_"
#order += "ethernet enp0s31f6"
#order += "ethernet enp2s0f0"
order += "tztime local"

# order += "memory"
# order += "ipv6"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
# order += "path_exists VPN"
# order += "wireless _first_"
# order += "uptime"
# order += "tztime berlin"

wireless _first_ {
        format_up = "📡%quality @ %essid"  #, %bitrate, %ip
        format_down = "📡 down"
}

ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "🌐 %ip"
        #format_up = "🌐 %ip @ %speed"
        format_down = "🌐 down"
}

battery 0 {
        format = "%status %percentage %remaining"  # %emptytime
        format_down = "⚡"
        status_chr = "🔌"
        status_bat = "🔋"
        status_unk = "? UNK"
        status_full = "☻"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 30
        hide_seconds = true
        integer_battery_capacity = true
}

volume master {
        format = "🔊 %volume"
        format_muted = "🔇 %volume"
        #device = "pulse"
        #mixer = "Master"
        #mixer_idx = 0
}

# Doesn't work...
volume mic {
        format = "🎙️ %volume"
        format_muted = "🤫 %volume"
        device = "pulse:alsa_input.usb-046d_C922_Pro_Stream_Webcam_78A077B0-02.analog-stereo"  # alsamixer
        mixer = "Capture"
        mixer_idx = 1
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "🕑 %Y-%m-%d %H:%M:%S"
}

load {
        format = "⚖️ %1min"
        max_threshold = "10.0"
}

cpu_usage {
        format = "🏭 %usage"
}

cpu_temperature 0 {
        format = "🌡️%degrees°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

memory {
        format = "🐏 %percentage_used"
}

disk "/" {
        format = "💾 %avail"
}
