#!/bin/bash

HOSTNAME=$(hostnamectl --static)
FOLDER="$HOME/annex/Logs/Screenshots/$HOSTNAME"

if [ ! -d "$FOLDER" ]; then
    echo "Screenshot directory does not exist: $FOLDER"
    exit 1
fi

# Find the most recent file in the screenshots directory
LATEST=$(find "$FOLDER" -type f -name "*.png" -printf '%T@ %p\n' | sort -n | tail -1 | cut -f2- -d" ")

if [ -z "$LATEST" ]; then
    echo "No screenshots found in $FOLDER"
    exit 1
fi

echo "$LATEST"
