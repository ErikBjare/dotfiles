# Export GPGKEY
export GPGKEY=86E4C130

# Default editor & terminal
export EDITOR=vim
export TERM="xterm-256color"

# tmux requires strange things to get 256-color and ncurses to play nicely...
# https://unix.stackexchange.com/questions/1045/getting-256-colors-to-work-in-tmux
# https://bbs.archlinux.org/viewtopic.php?pid=880348
alias tmux='TERM=xterm-256color tmux'

# ~/bin path
export PATH="$PATH:/home/erb/bin"

# JDK path
# This should preferably be set in /etc/environment to
# allow for use by applications outside of bash
export JAVA_HOME="/usr/local/jdk1.7.0"
export PATH="$JAVA_HOME/bin:$PATH"

# Go path
export GOPATH="$HOME/.go"
export GOROOT="/usr/lib/go"
export PATH="$PATH:$GOPATH/bin"

# Enable color support of ls and others
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Find process command
alias proc="ps -ef | grep"

# Fixes IRSSI scrollback (http://blog.schrierc.org/2011/07/invalid-tmux-term-causes-irssi-issues.html)
alias irssi='TERM=screen-256color irssi'

# Alias for quick reloading of zsh
alias zsh-reload='source ~/.zshrc'

# Alias for making quick python-commands inline
alias pyc='python3 -c'

# Clipboard helper func
alias toclip='xclip -sel clipboard'

# Alias for "streak"
alias streak-code='streak -cal="Coding streaks" -event="Coding streak"'
alias streak-writing='streak -cal="Writing streaks" -event="Writing streak"'
