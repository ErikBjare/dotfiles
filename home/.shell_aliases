# Default editor & terminal
export EDITOR=vim
export TERM="xterm-256color"

# ~/bin path
export PATH="$PATH:~/bin"

# JDK path
# This should preferably be set in /etc/environment to 
# allow for use by applications outside of bash
export JAVA_HOME="/usr/local/jdk1.7.0"
export PATH="$JAVA_HOME/bin:$PATH"

# Enable color support of ls and others
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Find process command
alias proc="ps -ef | grep"

# tmux configs
alias tmux-main="tmux -f ~/.tmux/main.conf"
alias tmux-work="tmux -f ~/.tmux/work.conf"

# IRSSI configs
alias irssi-main="irssi --config=~/.irssi/config"
