[core]
	autocrlf = input
	editor = nvim
	pager = delta --dark --diff-so-fancy

[init]
	defaultBranch = master

[interactive]
    #diffFilter = delta --color-only

[status]
	submoduleSummary = true

[commit]
	gpgsign = true

[pull]
	ff = only

[push]
	default = current

[color]
	ui = true

[color "status"]
    changed = yellow
    untracked = red
    added = green bold

[delta]
    features = decorations line-numbers #side-by-side
    syntax-theme = Monokai Extended
    #whitespace-error-style = 22 reverse
    #plus-color = "#012800"
    #minus-color = "#340001"

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[alias]
	merge-diff-theirs = diff HEAD...MERGE_HEAD

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[filter "notebook"]
	clean = poetry run jupyter nbconvert --ClearOutputPreprocessor.enabled=True --stdin --to=notebook --stdout
	smudge = poetry run jupyter nbconvert --ClearOutputPreprocessor.enabled=True --stdin --to=notebook --stdout
	required = true
