[core]
	autocrlf = input
	editor = nvim
[color]
	ui = true
[color "status"]
    changed = yellow
    untracked = red
    added = green bold
[push]
	default = current
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[status]
	submoduleSummary = true
[commit]
	gpgsign = true
